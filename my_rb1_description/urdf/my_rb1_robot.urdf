<robot name="my_rb1_robot">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.3" radius="0.25"/>
      </geometry>
      <material name="sapphire_blue">
        <color rgba="0.05 0.32 0.72 0.5"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.3" radius="0.25"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="21.5"/>
      <inertia ixx="0.509" ixy="0.0" ixz="0.0" iyy="0.509" iyz="0.0" izz="0.688"/>
    </inertial>
  </link>
 
   <gazebo reference="base_link">
    <material>Gazebo/DarkBlue</material>
  </gazebo>

  <link name="base_footprint"/>

<!-- Joint to connect base_footprint to base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
   <origin xyz="0 0 0.15" rpy="0 0 0"/>
  </joint>

  <!-- Wheels definition -->
  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
      <material name="ruby_red">
        <color rgba="0.87 0.06 0.37 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.000365" ixy="0.0" ixz="0.0" iyy="0.000365" iyz="0.0" izz="0.000313"/>
    </inertial>
  </link>

    <gazebo reference="left_wheel">
    <material>Gazebo/DarkRed</material>
  </gazebo>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="0.0 0.2 -0.15" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/> <!-- Assuming the wheel rotates around the z-axis -->
  </joint>
  
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
      <material name="ruby_red">
        <color rgba="0.87 0.06 0.37 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="0.000365" ixy="0.0" ixz="0.0" iyy="0.000365" iyz="0.0" izz="0.000313"/>
    </inertial>
  </link>


  <gazebo reference="right_wheel">
    <material>Gazebo/DarkRed</material>
  </gazebo>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="0.0 -0.2 -0.15" rpy="1.5708 0 0"/>
    <axis xyz="0 0 1"/> <!-- Assuming the wheel rotates around the z-axis -->
  </joint>
  
  <!-- Caster wheels -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.000104" ixy="0.0" ixz="0.0" iyy="0.000104" iyz="0.0" izz="0.000156"/>
    </inertial>
  </link>

  <gazebo reference="front_caster">
    <material>Gazebo/DarGrey</material>
  </gazebo>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <gazebo reference="front_caster">
    <material>Gazebo/DarkGrey</material>
    <mu1>0.0</mu1> <!-- friction parameter -->
    <mu2>0.0</mu2> <!-- friction parameter -->
  </gazebo>
  
  <link name="back_caster">
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="dark_gray">
        <color rgba="0.3 0.3 0.3 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.000104" ixy="0.0" ixz="0.0" iyy="0.000104" iyz="0.0" izz="0.000156"/>
    </inertial>
  </link>

  <gazebo reference="back_caster">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <joint name="back_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="back_caster"/>
    <origin xyz="-0.1 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <gazebo reference="back_caster">
    <material>Gazebo/DarkGrey</material>
    <mu1>0.0</mu1> <!-- friction parameter -->
    <mu2>0.0</mu2> <!-- friction parameter -->
  </gazebo> 

  <link name="front_laser">
    <visual>
      <geometry>
       <cylinder radius="0.03" length="0.04"/>
      </geometry>
      <material name="black">
        <color rgba="0.1 0.1 0.1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0.25 0 0.075" rpy="3.14159 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.00125" ixy="0.0" ixz="0.0" iyy="0.00125" iyz="0.0" izz="0.000625"/>
    </inertial>
  </link>

  <gazebo reference="front_laser">
    <material>Gazebo/Black</material>
  </gazebo>

  <joint name="front_laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_laser"/>
    <origin xyz="0.25 0 0.075" rpy="3.14159 0 0"/>
  </joint>

  <gazebo reference="front_laser">
    <material>Gazebo/Black</material>
  </gazebo>

</robot>